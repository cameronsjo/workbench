{
  "name": "cameronsjo",
  "owner": {
    "name": "Cameron Sjo",
    "github": "cameronsjo"
  },
  "metadata": {
    "description": "Lean Claude Code toolkit - actual tools, not prompt wrappers",
    "version": "3.0.0",
    "pluginRoot": "./plugins"
  },
  "plugins": [
    {
      "name": "core",
      "source": "./plugins/core",
      "description": "Workflow modes (/turbo, /roast) and tool wrappers (/ready, /check)",
      "version": "3.0.0",
      "keywords": ["workflow", "modes", "productivity"],
      "strict": true
    },
    {
      "name": "essentials",
      "source": "./plugins/essentials",
      "description": "User memory MCP server - persists preferences across sessions",
      "version": "3.0.0",
      "keywords": ["memory", "mcp", "persistence"],
      "strict": true
    },
    {
      "name": "research",
      "source": "./plugins/research",
      "description": "Conversation search - indexes and searches past Claude sessions",
      "version": "3.0.0",
      "keywords": ["search", "conversations", "history"],
      "strict": true
    }
  ]
}
